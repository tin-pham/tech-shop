<form class='form form-signup' method='POST' action='api/{{apiVer}}/signup'>
  <div class='form-container'>

    <h2 class='form__title'>Đăng ký</h2>
    <div class='form-group'>
      <div class='form-group__main'>
        <label for='username'>Tên đăng nhập</label>
        <input type='text' name='username' id='username' />
      </div>

      <div data-name='username' class='form-group__side errors username'></div>
    </div>

    <div class='form-group'>
      <div class='form-group__main'>
        <label for='password'>Mật khẩu</label>
        <input type='password' name='password' id='password' />
      </div>
      <div data-name='password' class='form-group__side errors password'></div>
    </div>

    <button class='btn btn--primary'>Đăng ký</button>
  </div>
</form>

<script src={{script}}></script>
