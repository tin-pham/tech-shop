<section>
  <form data-form='reviews' class='form form-post' action='/api/{{apiVer}}/reviews' method='post' autocomplete='off'>
    <div class='form-container'>
      <div class='form-group'>
        <div class='form-group__main'>
          <label for='product-id'>id sản phẩm muốn đánh giá</label>
          <input type='text' id='product-id' name='productId' />
        </div>
        <div data-name='product._id' class='form-group__side errors'></div>
      </div>
      <div class='form-group'>
        <div class='form-group__main'>
          <label for='content'>Nội dung đánh giá</label>
          <input type='text' id='content' name='content' />
        </div>
        <div data-name='content' class='form-group__side errors'></div>
      </div>
      <div class='form-group'>
        <div class='form-group__main'>
          <label for='rating'>Số sao</label>
          <input type='number' id='rating' name='rating' min='1' max='5' step='0.5' />
        </div>
        <div data-name='rating' class='form-group__side errors'></div>
      </div>

      <button type='submit' class='btn btn--primary'>Đánh giá</button>
    </div>
  </form>
</section>

<script src={{script}}></script>
