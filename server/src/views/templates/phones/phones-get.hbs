<section class='links'>
  <div class='endpoint'>
    <p>GET All Phones</p>
    <div class='endpoint__url'>
      <p>GET</p>
      <a href='/api/{{apiVer}}/phones'>/api/{{apiVer}}/phones</a>
    </div>
  </div>
  <div class='endpoint'>
    <p>GET Specific Phone</p>
    <div class='endpoint__url'>
      <p>GET</p>
      <a href='/api/{{apiVer}}/phones/625657c7b7b41a9c198bdb94'>/api/{{apiVer}}/phones/:id</a>
    </div>
  </div>

  <div class='endpoint'>
    <p>GET phone with filter</p>

    <form data-form='phones' action='/api/{{apiVer}}/phones' class='form form-get' autocomplete='off'>
      <div class='form-container'>

        <div class='form-group'>
          <div class='form-group__main'>
            <label for='limit'>Limit</label>
            <input data-filter='limit' type='number' id='limit' name='limit' min='0' value='0' />
          </div>
        </div>

        <div class='form-group'>
          <div class='form-group__main'>
            <label for='page'>Page</label>
            <input data-filter='page' type='number' id='page' name='page' min='0' value='1' />
          </div>
        </div>

        <div class='form-group'>
          <div class='form-group__main'>
            <label for='name'>Sản phẩm muốn tìm</label>
            <input data-filter='name' type='text' id='name' name='name' />
          </div>
        </div>
        <div class='form-group'>
          <div class='form-group__main'>
            <label for='category'>Danh mục sản phẩm</label>

            <select data-filter='category' name='category' id='category' class='form-input'>
              <optgroup label='Điện thoại'>
                <option value=''></option>
                <option value='Điện thoại nút bấm'>Điện thoại nút bấm</option>
                <option value='Điện thoại thông minh'>Điện thoại thông minh</option>
              </optgroup>
            </select>

          </div>
        </div>
        <div class='form-group'>
          <div class='form-group__main'>
            <label for='price-from'>Giá thấp nhất</label>
            <input data-filter='priceFrom' type='number' id='price-from' name='priceFrom' min='0' step='1000' />
          </div>
        </div>
        <div class='form-group'>
          <div class='form-group__main'>
            <label for='price-to'>Giá cao nhất</label>
            <input data-filter='priceTo' type='number' id='price-to' name='priceTo' min='0' step='1000' />
          </div>
        </div>
        <div class='form-group'>
          <div class='form-group__main'>
            <label for='quantity'>Số lượng từ</label>
            <input data-filter='quantity' type='number' id='quantity' name='quantity' min='0' />
          </div>
        </div>

        <div class='endpoint__url'>
          <p>GET</p>
          <a href='/api/{{apiVer}}/phones?limit=0&page=1'>/api/{{apiVer}}/phones?limit=0&page=1</a>
        </div>
      </div>
    </form>

  </div>
</section>

<script src={{script}}> </script>
